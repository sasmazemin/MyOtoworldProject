<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyCarsFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mycarsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp" /> <!-- Butonun alanını bırakmak için margin ekliyoruz -->

    <!-- Buton (her zaman en altta sabit kalacak) -->
    <Button
        android:id="@+id/addVehicleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:backgroundTint="@color/mainColor"
        android:text="Add Vehicle"
        android:textColor="@android:color/white" />


</FrameLayout>
