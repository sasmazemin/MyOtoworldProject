<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.eminsasmaz.otoworldd.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >


        <action
            android:id="@+id/action_homeFragment_to_mapsActivity"
            app:destination="@id/mapsActivity" />
        <action
            android:id="@+id/action_homeFragment_to_inspectionMapsActivity"
            app:destination="@id/inspectionMapsActivity" />
        <action
            android:id="@+id/action_homeFragment_to_tireMapsActivity"
            app:destination="@id/tireMapsActivity" />
        <action
            android:id="@+id/action_homeFragment_to_towMapsActivity"
            app:destination="@id/towMapsActivity" />
    </fragment>
    <activity
        android:id="@+id/mapsActivity"
        android:name="com.eminsasmaz.otoworldd.MapsActivity"
        android:label="activity_maps"
        tools:layout="@layout/activity_maps" />
    <activity
        android:id="@+id/inspectionMapsActivity"
        android:name="com.eminsasmaz.otoworldd.InspectionMapsActivity"
        android:label="activity_carpark_maps"
        tools:layout="@layout/activity_carpark_maps" />
    <activity
        android:id="@+id/tireMapsActivity"
        android:name="com.eminsasmaz.otoworldd.TireMapsActivity"
        android:label="activity_tire_maps"
        tools:layout="@layout/activity_tire_maps" />
    <activity
        android:id="@+id/towMapsActivity"
        android:name="com.eminsasmaz.otoworldd.TowMapsActivity"
        android:label="activity_tow_maps"
        tools:layout="@layout/activity_tow_maps" />
</navigation>